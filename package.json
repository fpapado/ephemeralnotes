{
  "name": "ephemeral",
  "version": "1.0.0",
  "description": "",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev": "elm-live src/Main.elm --output=dist/elm.js --pushstate",
    "build": "npm-run-all clean build:elm build:uglify build:styles build:copy-assets",
    "build:elm": "elm make --optimize src/Main.elm --output=dist/elm.js",
    "build:uglify": "uglifyjs dist/elm.js --compress 'pure_funcs=\"F2,F3,F4,F5,F6,F7,F8,F9,A2,A3,A4,A5,A6,A7,A8,A9\",pure_getters,keep_fargs=false,unsafe_comps,unsafe' | uglifyjs --mangle --output=dist/elm.js",
    "build:styles": "cp src/styles/index.css dist/",
    "build:copy-assets": "cp index.html dist && cp assets -r dist",
    "clean": "rimraf dist",
    "deploy": "npx now",
    "test": "elm-test"
  },
  "bundlesize": [
    {
      "path": "./dist/elm.js",
      "maxSize": "50 kB",
      "compression": "gzip"
    }
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "elm": "^0.19.0-bugfix2",
    "elm-live": "^3.0.0",
    "elm-test": "^0.18.12",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "uglify-es": "^3.3.9"
  }
}
