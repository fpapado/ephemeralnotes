{
  "name": "ephemeral",
  "version": "1.0.0",
  "description": "",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev": "npm-run-all clean setup build:copy-assets dev:webpack",
    "dev:watch": "npm-run-all --parallel dev:watch-elm dev:webpack",
    "dev:webpack": "webpack-serve",
    "dev:watch-elm": "chokidar 'src/**/*.elm' -c 'elm make src/Main.elm --output dist/js/elm.js --debug' --initial",
    "prod": "npm-run-all build serve-prod",
    "prod-debug": "npm-run-all build-debug serve-prod",
    "serve-prod": "npx serve dist/",
    "build": "NODE_ENV=production npm-run-all clean setup build:copy-assets build:elm build:uglify build:webpack",
    "build-debug": "NODE_ENV=production npm-run-all clean setup build:copy-assets build:elm-debug build:uglify build:webpack",
    "build:webpack": "webpack",
    "build:elm": "elm make --optimize src/Main.elm --output=dist/js/elm.js",
    "build:elm-debug": "elm make --debug src/Main.elm --output=dist/js/elm.js",
    "build:uglify": "uglifyjs dist/js/elm.js --compress 'pure_funcs=\"F2,F3,F4,F5,F6,F7,F8,F9,A2,A3,A4,A5,A6,A7,A8,A9\",pure_getters=true,keep_fargs=false,unsafe_comps=true,unsafe=true' | uglifyjs --mangle --output=dist/js/elm.js",
    "build:copy-assets": "cp assets -r dist",
    "setup": "mkdir dist",
    "clean": "rimraf dist",
    "release": "npm-run-all deploy alias",
    "deploy": "npx now",
    "alias": "npx now alias",
    "test": "elm-test"
  },
  "bundlesize": [
    {
      "path": "./dist/elm.js",
      "maxSize": "50 kB",
      "compression": "gzip"
    }
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "critters-webpack-plugin": "^1.1.0",
    "css-loader": "^1.0.0",
    "cssnano": "^4.1.0",
    "elm": "^0.19.0-bugfix2",
    "elm-hot-webpack-loader": "^1.0.0",
    "elm-live": "^3.0.0",
    "elm-test": "^0.18.12",
    "elm-webpack-loader": "^5.0.0",
    "html-webpack-plugin": "^3.2.0",
    "koa-connect-history-api-fallback": "^0.3.1",
    "mini-css-extract-plugin": "^0.4.2",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "prettier": "^1.14.2",
    "size-plugin": "^1.0.1",
    "style-loader": "^0.23.0",
    "uglify-es": "^3.3.9",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-serve": "^2.0.2",
    "workbox-webpack-plugin": "^3.4.1"
  }
}
