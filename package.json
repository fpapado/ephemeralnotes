{
  "name": "ephemeral",
  "version": "1.0.0",
  "description": "",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev": "npm-run-all clean setup build:styles build:copy-assets dev:elm",
    "dev:elm": "elm-live src/Main.elm --output=dist/js/elm.js --pushstate --dir=dist",
    "build": "npm-run-all clean setup build:elm build:uglify build:webpack build:styles",
    "build:webpack": "webpack",
    "build:elm": "elm make --optimize src/Main.elm --output=dist/js/elm.js",
    "build:uglify": "uglifyjs dist/js/elm.js --compress 'pure_funcs=\"F2,F3,F4,F5,F6,F7,F8,F9,A2,A3,A4,A5,A6,A7,A8,A9\",pure_getters,keep_fargs=false,unsafe_comps,unsafe' | uglifyjs --mangle --output=dist/js/elm.js",
    "build:styles": "mkdir dist/styles && cp src/styles/index.css dist/styles/",
    "build:copy-assets": "cp index.html dist && cp assets -r dist",
    "setup": "mkdir dist",
    "clean": "rimraf dist",
    "deploy": "npx now",
    "test": "elm-test"
  },
  "bundlesize": [
    {
      "path": "./dist/elm.js",
      "maxSize": "50 kB",
      "compression": "gzip"
    }
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "critters-webpack-plugin": "^1.1.0",
    "elm": "^0.19.0-bugfix2",
    "elm-live": "^3.0.0",
    "elm-test": "^0.18.12",
    "html-webpack-plugin": "^3.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "size-plugin": "^1.0.1",
    "uglify-es": "^3.3.9",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0"
  }
}
